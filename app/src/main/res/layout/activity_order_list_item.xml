<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green"
        android:alpha="0.3"
        android:id="@+id/new_overlay"
        />

    <ImageButton
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/star"
        android:layout_marginTop="10dp"
        android:id="@+id/fav_button"
        />

    <TextView
        android:text="Номер"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_number"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:gravity="end"
        android:id="@+id/order_list_item_number"/>

    <TextView
        android:text="Создан"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_created"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_list_item_number"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:id="@+id/order_list_item_created"/>

    <TextView
        android:text="Обновлен"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_updated"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_list_item_created"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:id="@+id/order_list_item_updated"/>

    <TextView
        android:text="Тип"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_type"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_list_item_updated"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:id="@+id/order_list_item_type"/>

    <TextView
        android:text="Пользователь"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_user"
        android:layout_marginLeft="20dp"
        android:id="@+id/order_user_type"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_list_item_type"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:id="@+id/order_list_item_user"/>

    <TextView
        android:text="Статус"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_list_item_status"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="Лейбл"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_list_item_user"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:id="@+id/order_list_item_status"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/order_list_item_status"/>

</android.support.constraint.ConstraintLayout>