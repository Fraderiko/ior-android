<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_name"
        app:layout_constraintRight_toRightOf="@id/text_message_bubble"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="italic"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/message_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/rounded_share_right"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:id="@+id/text_message_bubble"
        android:maxWidth="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_date"
        app:layout_constraintRight_toRightOf="@id/text_message_bubble"
        app:layout_constraintTop_toBottomOf="@id/text_message_bubble"
        android:layout_marginTop="2dp"
        android:textStyle="italic"
        />


</android.support.constraint.ConstraintLayout>