<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.iorcontrol.ior.ior">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ApplicationIOR">
        <activity
            android:name=".Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OrdersListScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>

        <activity
            android:name=".OrderScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StatusDetailsScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VideoPlayer"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/AppTheme" />
        <activity android:name=".ImageGalleryScreen"/>
        <activity
            android:name=".FieldTextScreen"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".StatusDetailsEmployeeScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MediaScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CreateOrder.CreateOrderScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />
        <activity
            android:name=".RecipientScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MessagesScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MessagesCreateScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name=".ProfileScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".FeedbackScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".SortScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".Chat.ChatScreen"
            android:screenOrientation="portrait"/>

    </application>



</manifest>