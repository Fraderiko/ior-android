<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.iorcontrol.ior.ior">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".ApplicationIOR">
        <activity
            android:name=".Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login.LoginScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".OrderList.OrdersListScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>

        <activity
            android:name=".Order.OrderScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StatusDetails.StatusDetailsScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VideoPlayer.VideoPlayer"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/AppTheme" />
        <activity android:name=".ImageGallery.ImageGalleryScreen"/>
        <activity
            android:name=".StatusDetails.FieldTextScreen"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".StatusDetails.StatusDetailsEmployeeScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MediaScreen.MediaScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CreateOrder.CreateOrderScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />
        <activity
            android:name=".Recipient.RecipientScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Messages.MessagesScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Messages.MessagesCreateScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name=".Profile.ProfileScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".Feedback.FeedbackScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".OrderList.SortScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".Chat.ChatScreen"
            android:screenOrientation="portrait"/>

    </application>



</manifest>